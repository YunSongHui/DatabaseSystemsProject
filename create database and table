create database cafe_database; //카페 관리 데이터베이스 생성

use cafe_database //카페 관리 데이터베이스 사용

//음료 테이블 생성
create table 음료
(메뉴 varchar(40) not null, 
가격 varchar(40) not null, 
사이즈 varchar(40) not null, 
재료 varchar(40) not null);

//직원 테이블 생성
create table 직원 
(ID smallint unsigned not null auto_increment primary key, 
이름 varchar(20) not null, 
연락처 varchar(40) not null, 
직책 varchar(20) not null);
